  <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 100 0 100;">
    <Text fill="white" text="- Command Line Interface" textAlignment="RIGHT" wrappingWidth="298.66664123535156">
      <font>
        <Font name="Consolas" size="20.0" />
      </font>
    </Text>
    <Button fx:id="startCliButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="239.0" text="Start CLI" onAction="#handleButtonAction" />
  </HBox>

  <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 100 0 100;">
    <Text fill="white" text="- Terminate This Menu" textAlignment="RIGHT" wrappingWidth="297.9999771118164">
      <font>
        <Font name="Consolas" size="20.0" />
      </font>
    </Text>
    <Button fx:id="exitButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="239.0" text="Exit" textFill="RED" onAction="#handleButtonAction" />
  </HBox>
</VBox>
